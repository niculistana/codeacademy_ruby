<div class="article">
  <div class="container">
    <p class="date"><%= @article.created_at.strftime('%b %d') %></p>
    <h2><%= @article.title %></h2>
    <p class="author">by <%= @article.author %></p>
    <p class="article_content"><%= @article.body %></p>

    <!-- Your code here -->
    <tr>
      <td><%=link_to "Back to articles", "/"%></td>
      <td><%= link_to 'Edit', edit_article_path(@article) %></td>
      <td><%= link_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </div>
</div>